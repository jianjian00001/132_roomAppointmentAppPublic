
.login {
	margin-top: 56rpx;
	margin-right: 72rpx;
	margin-left: 72rpx;
}
.login-title {
	font-size: 56rpx;
	font-weight: 500;
}
.login-explain {
	font-size: 28rpx;
	color: #9E9E9E;
}
.login-phone {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	border-bottom: 2rpx #dedede solid;
	margin-top: 56rpx;
	margin-bottom: 40rpx;
}
.login-phone-getcode {
	color: #3F51B5;
	text-align: center;
	min-width: 140rpx;
}
.login-code {
	border-bottom: 2rpx #dedede solid;
}
.login-username {
	margin-top: 56rpx;
	margin-bottom: 40rpx;
	border-bottom: 2rpx #dedede solid;
}
.login-password {
	border-bottom: 2rpx #dedede solid;
}
.btn-login {
	margin-top: 100rpx;
	border-radius: 50rpx;
	font-size: 16px;
	color: #fff;
	background: linear-gradient(to right, #88a1f9, #9ac6ff);
}
.btn-login-active {
	background: linear-gradient(to right, #365fff, #36bbff);
}
.btn-login-hover {
	background: linear-gradient(to right, #365fdd, #36bbfa);
}
button[disabled] {
	color: #fff;
}
.login-mode {
	text-align: center;
	margin-top: 32rpx;
}

